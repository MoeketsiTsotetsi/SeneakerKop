@page
@model SeneakerKop.Pages.snks.IndexModel


<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Sneaker[0].ImageTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sneaker[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sneaker[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sneaker[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sneaker[0].Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Sneaker) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ImageTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-danger">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-danger">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<p>
    <a asp-page="Create" class="btn btn-info">Create New</a>
</p>